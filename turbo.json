{
 "$schema": "https://turborepo.org/schema.json",
 "globalDependencies": [".env", ".prettierignore", "prettier.config.js", "eslint.config.ts"],
 "tasks": {
  "dev": {
   "dependsOn": ["prisma:generate"],
   "outputs": [],
   "persistent": true
  },
  "build": {
   "dependsOn": ["^prisma:generate"],
   "outputs": [".next/**", "!.next/cache/**"]
  },
  "docker:build": {
   "outputs": [],
   "cache": false
  },
  "deploy": {
   "dependsOn": ["^build"],
   "outputs": [".next/**", "!.next/cache/**"],
   "persistent": true
  },
  "analyze": {
   "dependsOn": ["^build"],
   "outputs": [".next/**", "!.next/cache/**"]
  },
  "lint": {
   "dependsOn": ["^format:check"],
   "outputs": []
  },
  "lint:fix": {
   "outputs": []
  },
  "format": {
   "outputs": []
  },
  "format:check": {
   "outputs": []
  },
  "prisma:generate": {
   "cache": false,
   "outputs": ["prisma/schema.prisma"],
   "env": ["DATABASE_URL", "DATABASE_URL_UNPOOLED"]
  },
  "prisma:seed": {
   "cache": false,
   "env": ["DATABASE_URL", "DATABASE_URL_UNPOOLED"],
   "interactive": true
  },
  "prisma:push": {
   "cache": false,
   "env": ["DATABASE_URL", "DATABASE_URL_UNPOOLED"],
   "interactive": true
  },
  "prisma:migrate": {
   "outputs": ["prisma/migrations/**"],
   "env": ["DATABASE_URL", "DATABASE_URL_UNPOOLED"],
   "cache": false,
   "interactive": true
  },
  "prisma:format": {
   "outputs": ["prisma/schema.prisma"]
  }
 }
}
